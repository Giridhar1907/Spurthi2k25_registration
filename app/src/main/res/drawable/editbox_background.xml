<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white"/>  <!-- White background -->

    <!-- Border color and width -->
    <stroke android:width="2dp" android:color="#000000"/>  <!-- Light gray border -->

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>  <!-- Smooth edges -->

    <!-- Padding inside the box -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
